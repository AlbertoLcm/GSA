---
import Badge from "../components/Badge.astro";
import Button from "../components/Button.astro";
import Layout from "../layouts/Layout.astro";
import PointsSVG from "../components/PointsSVG.astro";
// import function to register Swiper custom elements
import { register } from "swiper/element/bundle";
// register Swiper custom elements
register();

import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    title: "Web Sites",
    description: "Desarrollamos sitios web con un diseño único y atractivo a medida de tus necesidades.",
    image: "./service-1.png",
  },
  {
    title: "Landing Pages",
    description: "Creamos landing pages para promocionar tus productos o servicios de forma efectiva.",
    image: "./service-2.png",
  },
  {
    title: "Aplicaciones",
    description: "Desarrollamos aplicaciones móviles y web profesionales que cumplen con tus expectativas.",
    image: "./service-3.png",
  },
  {
    title: "Personalizado",
    description: "¿Necesitas algo diferente? No te preocupes, con nuestro servicio personalizado lo hacemos realidad.",
    image: "./service-4.png",
  },
];
---

<Layout
  title="GSA | Web Sites, Landing Pages y Aplicaciones. Contáctanos ahora"
>
  <main>
    <section class="pt-8 pb-14 mb-40 relative">
      <PointsSVG />

      <div class="flex flex-col gap-5 w-[600px]">
        <h1 class="font-extrabold text-8xl max-lg:text-7xl">
          Diseño, <br /><span class="font-extralight">Desarrollo &</span> Solucioness
        </h1>
        <p class="text-lg text-[#ffffffa2]">
          Soluciones tecnológicas para empresas, negocios y personas.
        </p>
        <Badge>Disponibles en este momento</Badge>
        <Button type="primary"
          >Solicitar un Presupuesto <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            fill="#fff"
            viewBox="0 0 256 256"
            ><path
              d="M128,24A104,104,0,1,0,232,128,104.11,104.11,0,0,0,128,24Zm29.66,109.66-40,40a8,8,0,0,1-11.32-11.32L140.69,128,106.34,93.66a8,8,0,0,1,11.32-11.32l40,40A8,8,0,0,1,157.66,133.66Z"
            ></path></svg
          ></Button
        >
      </div>
    </section>

    <img src="./hero.png" alt="apps" class="absolute right-0 top-0 h-[120vh]" />
    <img src="./gradient.png" class="absolute left-0 top-28 select-none">

    <section class="mb-10 relative">
      
      <h2 class="font-extrabold text-7xl max-lg:text-7xl text-center">
        Nuestros Servicios
      </h2>
      <p class="text-center mt-6 text-[#ffffffa2] w-3/6 mx-auto">
        Ofrecemos una amplia gama de servicios tecnológicos para satisfacer
        todas tus necesidades
      </p>

      <div class="flex justify-center gap-2 mt-8">
        <button
          id="prev"
          class="rounded-full border border-[#ffffff41] w-14 h-14 flex justify-center items-center cursor-pointer active:scale-95"
        >
          <i class="ph ph-caret-left text-4xl text-[#ffffff79]"></i>
        </button>

        <button
          id="next"
          class="rounded-full border border-[#ffffff41] w-14 h-14 flex justify-center items-center cursor-pointer active:scale-95"
        >
          <i class="ph ph-caret-right text-4xl text-[#ffffff79]"></i>
        </button>
      </div>

      <swiper-container
        class="h-full"
        space-between="30"
        slides-per-view="2"
        slides-per-group="2"
        loop="true"
      >
        {
          services.map((service) => (
            <swiper-slide>
              <ServiceCard {...service} />
            </swiper-slide>
          ))
        }
      </swiper-container>
    </section>

    <section>

    </section>
  </main>
</Layout>
<script
  src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
></script>
<script>
  const swiperEl = document.querySelector("swiper-container");
  const btnPrev = document.querySelector("#prev");
  const btnNext = document.querySelector("#next");

  btnNext.addEventListener("click", () => {
    swiperEl.swiper.slideNext();
  });

  btnPrev.addEventListener("click", () => {
    swiperEl.swiper.slidePrev();
  });
</script>
