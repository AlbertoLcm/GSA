---
import Button from "./Button.astro";

interface Props {
  title: string;
  description: string;
  image: string;
}

const { title, description, image } = Astro.props;
---

<div class="flex justify-between mt-24 p-8 border border-[#ffffff25] rounded-xl text-[#ffffffb9]">
  <div class="flex flex-col justify-between w-[60%]">
    <h2 class="text-4xl">{title}</h2>
    <p>{description}</p>
  </div>
  
  <div class="flex flex-col w-[30%]">
    <img src={image} alt={title} class="-mt-24 mb-14 w-full">
    <Button full type="outline">Ver m√°s <i class="ph ph-arrow-right text-2xl" id="icon"></i></Button>
  </div>
</div>